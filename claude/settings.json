{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(cd:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(yarn:*)",
      "Bash(npm:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git show:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh label list:*)",
      "Bash(make:*)",
      "Bash(node:*)",
      "Bash(tree:*)",
      "Bash(echo:*)",
      "Bash(curl:*)",
      "Skill(superpowers:executing-plans)",
      "Skill(superpowers:finishing-a-development-branch)",
      "Skill(superpowers:systematic-debugging)",
      "mcp__context7"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notify \"Claude needs permission\" --title \"Claude Code\" --sound \"Glass\"",
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "notify \"Claude needs your attention\" --title \"Claude Code\" --sound \"Ping\"",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notify \"Claude task completed\" --title \"Claude Code\" --sound \"Pop\"",
            "async": true
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "superpowers@superpowers-marketplace": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true
  }
}
